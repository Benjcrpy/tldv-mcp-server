{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": false,
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
